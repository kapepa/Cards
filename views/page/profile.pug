extends layout

block content
  h1= title
  div(class="col s6")
    #isUser.avatar
      if isUser.avatar
        img(src= "/"+isUser.avatar alt= isUser.name)
      else 
        p avatar not establish
  div(class="col s6")
    form(class="col s12" method="post" action="/users/upload" enctype="multipart/form-data")
      .row
        div(class="input-field col s8 offset-s2")
          span= isUser.email
        div(class="input-field col s8 offset-s2")
          input(id="name" name="name" type="text" class="validate" value= isUser.name)
          label(for="name") Name
          span(class="helper-text" data-error="wrong")
        div(class="input-field col s8 offset-s2")
          div(class="file-field input-field")
            .btn
              span File
              input(type="file" name="avatar" multiple)
            div(class="file-path-wrapper")
              input(class="file-path validate" type="text" placeholder="Upload one or more files")
        div(class="input-field col s8 offset-s2")
          input(type="hidden" name="_csrf" value=csrfToken)
          button(type="submit" class="btn") upload
