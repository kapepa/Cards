extends layout

block content
  h1= title
  div(class="col s12")
    ul(id="tabs" class="tabs")
      li(class="tab col s3 offset-s3")
        a(class="active" href="#login") Login
      li(class="tab col s3")
        a(href="#regist") Registration
  #isError
    if isError
      div(class="col s6 offset-s3")
        p(class="error")= isError
  div(id="login" class="col s6 offset-s3")
    h5 Login
    form(class="col s12" method="post" action="/users/login")
      .row
        div(class="input-field col s8 offset-s2")
          input(id="email" name="email" type="email" class="validate")
          label(for="email") Email
          span(class="helper-text" data-error="wrong")
        div(class="input-field col s8 offset-s2")
          input(id="password" name="password" type="password" class="validate")
          label(for="password") Password
          span(class="helper-text" data-error="wrong")
        div(class="input-field col s8 offset-s2")
          input(type="hidden" name="_csrf" value=csrfToken)
          button(type="submit" class="btn") Go in
      a(href="/users/forget") Forget    
  div(id="regist" class="col s6 offset-s3")
    h5 Registration
    form(class="col s12" method="post" action="/users/regist")
      .row
        div(class="input-field col s8 offset-s2")
          input(id="rname" name="name" type="text" class="validate")
          label(for="name") Name
          span(class="helper-text" data-error="wrong")
        div(class="input-field col s8 offset-s2")
          input(id="remail" name="email" type="email" class="validate")
          label(for="email") Email
          span(class="helper-text" data-error="wrong")
        div(class="input-field col s8 offset-s2")
          input(id="rpassword" name="password" type="password" class="validate")
          label(for="password") Password
          span(class="helper-text" data-error="wrong")
        div(class="input-field col s8 offset-s2")
          input(id="rconfirmed" name="confirmed" type="password" class="validate")
          label(for="confirmed") Confirmed
          span(class="helper-text" data-error="wrong")
        div(class="input-field col s8 offset-s2")
          input(type="hidden" name="_csrf" value=csrfToken)
          button(type="submit" class="btn") Registration

